{
  "name": "@regenerate/wrapper",
  "version": "1.0.1-0",
  "description": "Manage side effects with testability and ergonomics",
  "repository": "https://github.com/d-asensio/regenerate.git",
  "author": "David Asensio CaÃ±as <david.asensio@icloud.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -p --no-private run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "types:check": "yarn workspace @regenerate/jest-matchers run types:check",
    "markdown:generate-toc": "markdown-toc -i",
    "release": "release-it"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true
    },
    "npm": false
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "husky": "^4.2.5",
    "jest": "^27.4.7",
    "jest-extended": "^2.0.0",
    "jest-when": "^3.5.0",
    "lint-staged": ">=10",
    "markdown-toc": "^1.2.0",
    "release-it": "^14.12.4",
    "standard": "^16.0.4",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "./README.md": [
      "yarn markdown:generate-toc"
    ],
    "packages/**/*.js": [
      "yarn lint:fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "env": [
      "jest"
    ]
  },
  "volta": {
    "node": "16.13.2",
    "yarn": "1.22.17"
  },
  "packageManager": "yarn@3.1.1",
  "stableVersion": "1.0.0",
  "dependencies": {
    "release-it-yarn-workspaces": "^2.0.1"
  }
}
